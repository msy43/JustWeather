<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:layout_gravity="top|center"
    tools:context=".onboard.OnBoardFirst"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/onBoardFirstWelcomeCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/card_desing_one"
        android:elevation="30dp"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="@string/hello"
                android:textColor="@color/black"
                android:textSize="40dp" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:src="@drawable/ic_round_back_hand_24"
                app:tint="@color/orange"
                android:contentDescription="@string/hello" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:text="@string/just_weather_is_just_weather_app"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </LinearLayout>

</FrameLayout>